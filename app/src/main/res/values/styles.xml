<resources>

    <!-- Activities -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <!-- Dialogs -->
    <style name="AppDialog" parent="@android:style/Theme.DeviceDefault.Dialog" />

    <!-- Albums -->
    <style name="AlbumListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/album_item_separator</item>
    </style>

    <style name="AlbumPlaceholderTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/album_placeholder_title</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="AlbumItemOverlay">
        <item name="android:background">@color/album_item_overlay</item>
    </style>

    <style name="AlbumItemTitleText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/album_item_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_item_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/album_item_vertical_margin</item>
        <item name="android:textColor">@color/album_item_title</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="AlbumItemSubtitleText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/album_item_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_item_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/album_item_vertical_margin</item>
        <item name="android:textColor">@color/album_item_subtitle</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <!-- Album -->
    <style name="AlbumFragment">
        <item name="android:background">@color/album_background</item>
    </style>

    <style name="AlbumActionButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/album_info_title</item>
    </style>

    <style name="AlbumFooterText" parent="@android:style/TextAppearance">
        <item name="android:background">@color/album_footer_background</item>
        <item name="android:paddingLeft">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/album_info_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/album_info_vertical_margin</item>
        <item name="android:textColor">@color/album_footer_text</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="AlbumOverlayButton">
        <item name="android:paddingLeft">@dimen/album_overlay_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_overlay_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/album_overlay_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/album_overlay_vertical_margin</item>
    </style>

    <style name="AlbumInfoOverlayActions">
        <item name="android:background">@color/album_info_overlay_actions</item>
        <item name="android:paddingLeft">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/album_info_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/album_info_vertical_margin</item>
    </style>

    <style name="AlbumInfoOverlayInfo">
        <item name="android:background">@color/album_info_overlay_info</item>
        <item name="android:paddingLeft">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/album_info_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/album_info_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/album_info_vertical_margin</item>
    </style>

    <style name="AlbumInfoTitleText" parent="@android:style/TextAppearance">
        <item name="android:paddingBottom">@dimen/album_info_vertical_margin</item>
        <item name="android:textColor">@color/album_info_title</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="AlbumInfoSubtitleText" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/album_info_subtitle</item>
        <item name="android:textColorLink">@color/album_info_subtitle</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <!-- Favorites -->
    <style name="FavoriteHeaderText" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">@dimen/favorite_item_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/favorite_item_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/favorite_item_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/favorite_item_vertical_margin</item>
        <item name="android:textColor">@color/profile_header</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FavoriteItem">
    </style>

    <style name="FavoriteItemIcon">
        <item name="android:layout_marginTop">@dimen/favorite_item_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/favorite_item_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/favorite_item_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/favorite_item_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Profile -->
    <style name="ProfileListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/profile_item_separator</item>
        <item name="android:dividerHeight">@dimen/profile_item_divider</item>
    </style>

    <style name="ProfileSeparator">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@color/profile_separator</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ProfileLinkText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/profile_subtitle</item>
        <item name="android:textColorLink">@color/profile_subtitle</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="ProfileTitleText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/profile_title</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="ProfileSubtitleText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/profile_subtitle</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="ProfileHintText" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/profile_hint</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

</resources>
